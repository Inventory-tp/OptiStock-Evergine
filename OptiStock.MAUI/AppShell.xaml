<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OptiStock.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:OptiStock.MAUI"
    xmlns:views="clr-namespace:OptiStock.MAUI.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <!--Login Page-->
    <ShellContent
    Title="Login"
    ContentTemplate="{DataTemplate views:LoginPage}"
    Route="login"/>

    <ShellContent
    Title="Home"
    ContentTemplate="{DataTemplate views:HomePage}"
    Route="home" />

    <ShellContent
    Title="ManageUsers"
    ContentTemplate="{DataTemplate views:ManageUsersPage}"
    Route="management" />

    <ShellContent
    Title="NewUser"
    ContentTemplate="{DataTemplate views:NewUserPage}"
    Route="newUser" />
</Shell>
