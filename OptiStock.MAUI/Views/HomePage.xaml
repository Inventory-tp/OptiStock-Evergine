<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="OptiStock.MAUI.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:evergine="clr-namespace:OptiStock.MAUI.Evergine">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="8*" />
        </Grid.ColumnDefinitions>

        <!-- Small column on the left with icons -->
        <StackLayout Grid.Column="0">
            <Label Text="victor"></Label>
            <!-- Add your icon menu items here -->
        </StackLayout>

        <!-- Medium-sized column on the right -->
        <StackLayout Grid.Column="1">
            <Label Text="coucou" ></Label>
        </StackLayout>

        <!-- Large column on the right for 3D view -->
        <evergine:EvergineView x:Name="evergineView" Grid.Column="2" />
    </Grid>
</ContentPage>